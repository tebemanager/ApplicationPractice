<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blur"
    >
    
    <View
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="-350dp"
        android:background="@drawable/round_cirlce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RelativeLayout
        android:id="@+id/toolBar_rel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/back_arrow"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VoiceVy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/search_btn"
            app:tint="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sterio_rel"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar_rel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/sterio_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/amplifier_dashes"
            app:tint="@color/white"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/sterio_focus_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/music_images"
            app:tint="@color/white"
            />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/song_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:thumbTint="@color/white"
        android:progressTint="@color/white"
        android:indeterminateTint="@color/white"
        android:secondaryProgressTint="@color/white"
        android:layout_marginTop="20dp"
        android:progress="40"
        app:layout_constraintTop_toBottomOf="@+id/sterio_rel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:01"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="@+id/song_progress"
        app:layout_constraintTop_toBottomOf="@+id/song_progress"
        />
    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:45"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="@+id/song_progress"
        app:layout_constraintTop_toBottomOf="@+id/song_progress"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/time_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="start_time,total_time"
        />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Martin Garrix &amp; Bebe Rexha - In T..."
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/time_barrier"
        app:layout_constraintStart_toStartOf="@id/start_guid"
        app:layout_constraintEnd_toEndOf="@id/end_guid"
        />
    <TextView
        android:id="@+id/song_dtil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Album: 538 Hitzone - Best Of 2016, Bebe Rexha, Martin Garrix"
        android:textColor="@color/white"
        android:alpha="0.5"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/song_name"
        app:layout_constraintStart_toStartOf="@id/start_guid"
        app:layout_constraintEnd_toEndOf="@id/end_guid"
        />

    <RelativeLayout
        android:id="@+id/play_rel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/start_guid"
        app:layout_constraintEnd_toEndOf="@id/end_guid"
        app:layout_constraintTop_toBottomOf="@+id/song_dtil"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/play_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="@color/dark_some_bg"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="@dimen/play_size"
                android:layout_height="@dimen/play_size"
                app:srcCompat="@mipmap/icons_play"
                app:tint="@color/white"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="@dimen/play_size"
            android:layout_height="@dimen/play_size"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/controller_next"
            app:tint="@color/white"
            android:layout_toEndOf="@+id/play_card"
            android:padding="10dp"
            android:layout_marginStart="50dp"
            />
        <ImageView
            android:id="@+id/previous_btn"
            android:layout_width="@dimen/play_size"
            android:layout_height="@dimen/play_size"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/controller_start"
            app:tint="@color/white"
            android:layout_toStartOf="@+id/play_card"
            android:padding="10dp"
            android:layout_marginEnd="50dp"
            />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/option_bar_card"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/dark_bar_bg"
        app:layout_constraintStart_toEndOf="@id/start_guid"
        app:layout_constraintEnd_toEndOf="@id/end_guid"
        app:layout_constraintTop_toBottomOf="@id/play_rel"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/play_size"
                app:srcCompat="@drawable/ic_baseline_playlist_add_24"
                app:tint="@color/white"
                android:padding="@dimen/option_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/play_size"
                app:srcCompat="@drawable/ic_baseline_rotate_right_24"
                app:tint="@color/white"
                android:padding="@dimen/option_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/play_size"
                app:srcCompat="@drawable/repeat_24"
                app:tint="@color/white"
                android:padding="@dimen/option_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/play_size"
                app:srcCompat="@drawable/ic_baseline_downloading_24"
                app:tint="@color/white"
                android:padding="@dimen/option_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/play_size"
                app:srcCompat="@drawable/ic_baseline_blur_circular_24"
                app:tint="@color/white"
                android:padding="@dimen/option_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/up_arrow"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="@id/start_guid"
        app:layout_constraintEnd_toEndOf="@id/end_guid"
        app:layout_constraintBottom_toTopOf="@+id/lyrics_id"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/lyrics_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_bar_bg"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/start_guid"
        app:layout_constraintEnd_toEndOf="@id/end_guid"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lyrics"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="italic"
            />
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>